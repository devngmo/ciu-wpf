<Window x:Class="CIU_WPF.AppLayer.Dialogs.ResizeAllDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CIU_WPF.AppLayer.Dialogs"
        mc:Ignorable="d"
        Title="Resize All Image" Height="140" Width="382">
    <Grid>
        <StackPanel Orientation="Vertical">
            <RadioButton Content="To size:"></RadioButton>
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <Label Content="Max Width"></Label>
                <TextBox x:Name="maxWidth" Width="100"></TextBox>
                <Label Content="Max Height"></Label>
                <TextBox x:Name="maxHeight" Width="100"></TextBox>
            </StackPanel>
            <RadioButton Content="To percent:"></RadioButton>
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <Label Content="Percent"></Label>
                <TextBox x:Name="toPercent" Width="289"></TextBox>
            </StackPanel>

            <Button Content="Start" Click="startProcessing" Margin="0,25,0,0" Background="#FF0185FF" Foreground="White"></Button>
        </StackPanel>
    </Grid>
</Window>
